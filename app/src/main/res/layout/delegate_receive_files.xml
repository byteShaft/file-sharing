<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/image_"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/received_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button_open"
        android:layout_toRightOf="@+id/image_"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:padding="5dp"
        android:text="File Name"
        android:textColor="@color/background_color"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/pb_receive"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/received_file_name"
        android:layout_toLeftOf="@+id/button_open"
        android:layout_toRightOf="@+id/image_" />

    <Button
        android:id="@+id/button_open"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="open"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:theme="@style/AppTheme.ButtonGray" />

</RelativeLayout>
